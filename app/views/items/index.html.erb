<h1><%= t('.title') %></h1>

<div class="row items">
    <% @items.each do |i| %>
      <div class="col item-card">

        <% if i.images[0] %>
          <div class="img"><%= link_to image_tag(i.images[0].url), item_path(i) %></div>
        <% else %>
          <div class="img"><%= link_to image_tag('img.jpg'), item_path(i) %></div>
        <% end %>

        <div><%= link_to i.name, item_path(i) %></div>
        <div><%= number_to_currency(i.price) %></div>

      </div>
    <% end %>
</div>
